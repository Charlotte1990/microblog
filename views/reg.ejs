<!DOCTYPE html">
<html>
     <% include partials/head %>
<body class="bg-light">
    <!-- navigation -->
    <% include partials/nav %>

        <!-- alert message -->
        <% include partials/alert %>
        
        <!-- content -->
        <div class="registerMain">
            <form class="form-horizontal" role="form" method="POST">
                <div class="form-group col-md-10 offset-md-1">
                    <label for="username" class="control-label">用户名</label>
                    <div>
                        <input type="text" class="form-control" id="username" name="username" placeholder="请输入名字">
                    </div>
                </div>
                <div class="form-group col-md-10 offset-md-1">
                    <label for="password" class="control-label">密码</label>
                    <div>
                        <input type="text" class="form-control" id="password" name="password" placeholder="请输入密码">
                    </div>
                </div>
                <div class="form-group col-md-10 offset-md-1">
                    <label for="password-repeat" class="control-label">再次输入密码</label>
                    <div>
                        <input type="text" class="form-control" id="password-repeat" name="password-repeat" placeholder="请再次输入密码">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 offset-md-1">
                        <button type="submit" class="btn-primary btn-lg btn-block">注册</button>
                    </div>
                </div>
            </form>
        </div>
</body>

</html>